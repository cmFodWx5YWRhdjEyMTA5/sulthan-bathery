<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient"
    tools:context="com.vineesh.suthanbathery.fragments.MailusFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:alpha=".8"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="52dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/l1"
            android:orientation="vertical"
           >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:src="@drawable/logo"
                />


        </LinearLayout>





        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_name"
            android:layout_width="300dp"
            android:layout_height="wrap_content"

            android:layout_below="@+id/l1"
            android:layout_marginTop="25dp"
            android:textColorHint="#fff"
            android:background="#000"
            app:hintEnabled="true"
            android:hint="Name"

            >



            <EditText

                android:id="@+id/etxt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:textColorHighlight="#fff"
                android:paddingLeft="10dp"
                android:paddingRight="41dp"


                android:layout_marginLeft="15dp"
                android:drawablePadding="15dp"
                android:drawableLeft="@drawable/ic_person"
                android:inputType="textPersonName|textCapSentences"
                android:layout_marginBottom="10dp"/>


        </android.support.design.widget.TextInputLayout>

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="43dp"

            android:layout_below="@+id/l1"

            android:alpha=".4"
            android:layout_marginTop="25dp"></RelativeLayout>



        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_mob"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_input_name"

            android:textColorHint="#fff"
            android:background="#000"
            app:hintEnabled="true"
            android:hint="Number"

            app:hintAnimationEnabled="true"

            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/etxt_mob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:paddingLeft="10dp"

                android:paddingRight="41dp"
                android:textColor="#fff"
                android:layout_marginLeft="15dp"
                android:drawablePadding="15dp"
                android:drawableLeft="@drawable/ic_phone_number"
                android:inputType="phone"
                android:layout_marginBottom="10dp"/>


        </android.support.design.widget.TextInputLayout>

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="43dp"

            android:layout_marginTop="20dp"
            android:layout_below="@+id/text_input_name"

            android:alpha=".4"
            ></RelativeLayout>




        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_descri"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:textColorHint="#fff"
            android:background="#000"
            app:hintEnabled="true"
            android:hint="Message"
            android:layout_below="@+id/text_input_mob"
            android:layout_marginTop="20dp">


            <EditText
                android:id="@+id/etxt_descri"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textMultiLine"
                android:scrollHorizontally="false"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:lines="8"

                android:backgroundTint="#fff"

                android:textColorHighlight="#fff"
                android:minLines="6"
                android:layout_marginLeft="15dp"
                android:drawablePadding="15dp"
                android:drawableLeft="@drawable/ic_message_"
                android:gravity="top|left"

                android:background="@null"
                android:textColor="#fff"/>



        </android.support.design.widget.TextInputLayout>

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/text_input_mob"

            android:alpha=".4"
            ></RelativeLayout>



        <LinearLayout
            android:id="@+id/btn_send"

            android:layout_width="300dp"
            android:layout_height="52dp"

            android:layout_marginTop="20dp"
            android:gravity="center"
            android:background="#000"
            android:layout_marginBottom="90dp"
            android:layout_below="@+id/text_input_descri"
            >

            <TextView

                android:layout_width="300dp"
                android:layout_height="43dp"
                android:text="SEND"
                android:textColor="#fff"
                android:textSize="16sp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_gravity="center"
                />
        </LinearLayout>




    </RelativeLayout>

    </RelativeLayout>

    </ScrollView>
</android.support.v4.widget.NestedScrollView>
